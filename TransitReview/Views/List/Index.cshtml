        {
            <th>@column.Value</th>
        }
    </tr>
    <tr>
        <td>
            <ul>
                <li>
                    <a asp-controller="List" asp-action="Metros" asp-route-column="All" asp-route-value="All">ALL</a>
                </li>
            </ul>
        </td>
    </tr>

